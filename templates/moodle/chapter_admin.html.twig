{% extends 'base.html.twig' %}

{% block title %}Správce Kapitol{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/chapter_editor.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="container min-vh-100">
        <div class="row mt-5 mb-1"></div>
        <div class="row mt-4">
            <div class="col-10">
                <h1>{{ course.name }}</h1>
            </div>
            <div class="col-2">
                <a class="btn btn-primary" href="{{ path('admin_moodle_chapter_editor') }}" data-toggle="modal" data-target="#addModal"><i class="fas fa-plus mx-1"></i>Nový</a>
            </div>
        </div>
            {% for c in chapters %}
                <div class="row my-2 mx-4 pt-1 border border-gray rounded">
                    <div class="col-8">
                        <a href="">
                            <h3>{{ c.name }}</h3>
                        </a>
                    </div>
                    <div class="col-4 text-right">
                        <a href="" class="btn btn-info m-1"><i class="fas fa-link"></i></a>
                        <a href="{{ path('admin_moodle_chapter_editor') }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('api_moodle_chapter_remove',{'id':c.id}) }}" class="btn btn-danger remove"><i class="fas fa-trash"></i></a>
                    </div>
                </div>
            {% endfor %}
    </div>

{% endblock %}
